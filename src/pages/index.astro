---
// src/pages/index.astro
import {globals} from "@/config/globals";
import ShadCNLayout from "@/layouts/ShadCNLayout.astro";

import {buttonVariants} from "@/components/ui/button";



const prefetchInHead = [];
---

<ShadCNLayout title="Astro Shadcn UI Template">
	<section class="mx-auto p-8 grid items-center gap-6 pb-8 pt-6 md:py-10">
		<div class="flex max-w-[980px] flex-col items-start gap-2">
			<h1 class="text-3xl font-extrabold leading-tight tracking-tighter md:text-4xl">
				Astro Shadcn UI Template <br class="hidden sm:inline" />
				built with Radix UI and Tailwind CSS.
			</h1>
			<p class="max-w-[700px] text-lg text-muted-foreground"> Accessible and customizable components that you can copy and paste into your apps. Free. Open Source. </p>
		</div>
		<div class="flex gap-4">
			<a href="https://ui.shadcn.com" target="_blank" rel="noreferrer" class={buttonVariants()}> Documentation </a>
			<a href="https://github.com/gabrielbacha/astro-react-tailwind4-shadcn-starter" target="_blank" rel="noreferrer" class={buttonVariants({variant: "outline"})}> GitHub </a>
		</div>
	</section>
</ShadCNLayout>
