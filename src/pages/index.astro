---
// src/pages/index.astro
import Layout from "@/layouts/Layout.astro";

import {buttonVariants} from "@/components/ui/button";

// SEO Configuration
const title = "Astro Shadcn UI Template";
const description = "Accessible and customizable components built with Radix UI and Tailwind CSS. Free. Open Source.";

import {getAssetPath} from "@/lib/utils";



const ogImage = getAssetPath("/og-image.png");
const twImage = getAssetPath("/og-image.png");

// Consolidated SEO data
const seoData = {
	title,
	description,
	canonical: Astro.url.href,
	openGraph: {
		basic: {
			title,
			type: "website",
			image: ogImage,
			url: Astro.url,
		},
		optional: {
			description,
			siteName: "Astro Shadcn UI Template",
		},
	},
	twitter: {
		card: "summary_large_image",
		title,
		description,
		image: twImage,
	},
};

const prefetchInHead = [];
---

<Layout seoData={seoData}>
	<section class="mx-auto grid items-center gap-6 p-8 pt-6 pb-8 md:py-10">
		<div class="flex max-w-[980px] flex-col items-start gap-2">
			<h1 class="text-3xl leading-tight font-extrabold tracking-tighter md:text-4xl">
				Astro Shadcn UI Template <br class="hidden sm:inline" />
				built with Radix UI and Tailwind CSS.
			</h1>
			<p class="text-muted-foreground max-w-[700px] text-lg"> Accessible and customizable components that you can copy and paste into your apps. Free. Open Source. </p>
		</div>
		<div class="flex gap-4">
			<a href="https://ui.shadcn.com" target="_blank" rel="noreferrer" class={buttonVariants()}> Documentation </a>
			<a href="https://github.com/gabrielbacha/astro-react-tailwind4-shadcn-starter" target="_blank" rel="noreferrer" class={buttonVariants({variant: "outline"})}> GitHub </a>
		</div>
	</section>
</Layout>
